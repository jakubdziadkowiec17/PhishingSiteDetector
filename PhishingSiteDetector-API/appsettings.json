{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "data source=.; initial catalog=PhishingSiteDetector-DB; Integrated Security=True;TrustServerCertificate=True"
  },
  "JWT": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:7086",
    "IssuerSigningKey": "JWT_UNIQUE_SECURITY_KEY_FOR_APPLICATION",
    "ValidityMinutes": 15
  },
  "RefreshToken": {
    "ValidityDays": 30
  },
  "Cors": {
    "ClientPolicy": "ClientPolicy"
  }
}
